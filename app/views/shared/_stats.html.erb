<% load_user_helper %>
<div class="stats">
  <%= link_to following_user_path @user do %>
    <strong id="following" class="stat">
      <%= @user.following.size %>
    </strong>
    <%= t "users.follow.following" %>
  <% end %>
  <%= link_to followers_user_path @user do %>
    <strong id="followers" class="stat">
      <%= @user.followers.size %>
    </strong>
    <%= t "users.follow.followers" %>
  <% end %>
</div>
